<PredictionBar>:
    disease_name: ''
    probability: 0
    bar_color: [0, 0, 0, 1]
    size_hint_y: None
    height: '60dp'
    orientation: 'vertical'
    
    Label:
        text: root.disease_name
        size_hint_y: None
        height: '25dp'
        font_size: '16dp'
        color: 0, 0, 0, 1
        halign: 'center'
        
    BoxLayout:
        size_hint_y: None
        height: '35dp'
        padding: [10, 5]
        spacing: 10
        
        canvas.before:
            Color:
                rgba: 0.9, 0.9, 0.9, 1
            Rectangle:
                pos: self.pos
                size: self.size
                
        BoxLayout:
            id: bar
            canvas.before:
                Color:
                    rgba: root.bar_color
                Rectangle:
                    pos: self.pos
                    size: self.width * (root.probability / 100.0), self.height
                   
        Label:
            text: f"{root.probability:.1f}%"
            size_hint_x: None
            width: '60dp'
            color: 0, 0, 0, 1
            font_size: '14dp'
            halign: 'center'

<MainScreen>:
    orientation: 'vertical'
    
    canvas.before:
        Color:
            rgba: 0.95, 0.95, 0.95, 1
        Rectangle:
            pos: self.pos
            size: self.size
    
    BoxLayout:
        size_hint_y: None
        height: '70dp'
        padding: [20, 10]
        
        Label:
            text: 'Animal Skin Disease Prediction'
            font_size: '26dp'
            color: 0, 0.5, 1, 1
            halign: 'center'
            valign: 'middle'
    
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            padding: [15, 15]
            spacing: 15
            
            Image:
                id: preview_image
                source: ''
                allow_stretch: True
                keep_ratio: True
                size_hint: (1, None)
                height: '250dp'

            Button:
                text: 'Choose Image'
                size_hint_y: None
                height: '50dp'
                background_color: 0, 0.7, 1, 1
                font_size: '18dp'
                on_release: root.show_file_chooser()
            
            Button:
                id: predict_button
                text: 'Predict Disease'
                size_hint_y: None
                height: '55dp'
                background_color: 0, 0.7, 0.3, 1
                font_size: '18dp'
                disabled: True
                on_release: root.predict()
            
            Label:
                id: result_label
                text: 'Prediction Result: Awaiting Analysis...'
                font_size: '20dp'
                color: 0, 0, 0, 1
                size_hint_y: self.texture_size[1] + 10
                height: '35dp'
                padding: [10, 10]
                valign: 'middle'
                halign: 'center'
                text_size: self.width, None
            
            GridLayout:
                id: results_grid
                cols: 1
                spacing: 15
                size_hint_y: None
                height: self.minimum_height
                padding: [0, 10, 0, 15]

            Label:
                id: treatment_label
                text: ''
                font_size: '18dp'
                color: 0, 0, 0, 1
                size_hint_y: None
                height: self.texture_size[1] + 10 if self.text else 0
                padding: [10, 10]
                halign: 'center'
                valign: 'middle'
                text_size: self.width- 20, None

                canvas.before:
                    Color:
                        rgba: (0, 0, 0, 1) if self.text else (0, 0, 0, 0) 
                    Line:
                        width: 1.5  
                        rectangle: (self.x, self.y, self.width, self.height) if self.text else (0, 0, 0, 0)
            
            Label:
                id: warning_label
                text: ''
                font_size: '20dp'
                color: 1, 0, 0, 1
                size_hint_y: None
                height: self.texture_size[1] + 10
                padding: [10, 10]
                halign: 'center'
                valign: 'middle'
                bold: True
                text_size: self.width, None
